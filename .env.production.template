# AWS Deployment Environment Variables Template
# Copy this file and fill in your actual values

# ============================================
# Backend Environment Variables (App Runner)
# ============================================

# Database
DATABASE_URL=postgresql://postgres:YOUR_RDS_PASSWORD@YOUR_RDS_ENDPOINT:5432/qualitative_research

# AI Services
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# AWS Credentials (for S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_s3_bucket_name

# Redis (for Celery background tasks)
REDIS_URL=redis://your-redis-endpoint:6379

# Application
ENVIRONMENT=production
ALLOWED_ORIGINS=https://main.xxxxx.amplifyapp.com
MAX_FILE_SIZE_MB=500
ALLOWED_VIDEO_EXTENSIONS=[".mp4",".mov",".avi",".webm"]

# ============================================
# Frontend Environment Variables (Amplify)
# ============================================

# API Endpoint
VITE_API_URL=https://xxxxx.us-east-1.awsapprunner.com

